@model TempDataDemonstration.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateEmployee</title>
</head>
<body>
    <div> 
        <h2>Create New Employee...</h2>
        @using (Html.BeginForm())
        {
            <p>
                <label>Employee ID : @Html.TextBoxFor(e=>e.Id)</label>
            </p>
            <p>
                <label>Employee Name : @Html.TextBoxFor(e => e.Name)</label>
            </p>
            <p>
                <label>Employee Location : @Html.TextBoxFor(e => e.Location)</label>
            </p>
            <p>
                <label>Employee Salary : @Html.TextBoxFor(e => e.Salary)</label>
            </p>
            <button>Create</button>
        }
    </div>
</body>
</html>
